 //Write a program in C to get the largest element of an array using the function.
int larg(int array[])
 {
   int i,j,k,a[30],c,max=a[1];
   
   for(i=1;i<=5;i++)
   {
      
         if(a[i]>max)
         {
           max=a[i];
           
          
         }
        
   }
   printf("largest element is= %d",max);
 }

int main()
{
    int a[5],i;
    printf("enter the numbers= ");
    for(i=1;i<=5;i++)
    {
        scanf("%d",&a[i]);
    }
    larg(a);
}  //INCOMPLETE



























